# Database Configuration
DATABASE_URL=postgresql://claims_user:claims_password@localhost:5432/vehicle_claims

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Azure OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=vehicle-claims-images

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,heic

# AI Model Configuration
MODEL_CONFIDENCE_THRESHOLD=0.7
DAMAGE_SEVERITY_THRESHOLDS={"minor": 0.3, "moderate": 0.6, "severe": 0.8}

# Cost Estimation
BASE_REPAIR_COSTS={"bumper": 500, "door": 600, "hood": 800, "fender": 400, "windshield": 300}
SEVERITY_MULTIPLIERS={"minor": 0.5, "moderate": 1.0, "severe": 2.0}

# Fraud Detection
GPS_MISMATCH_THRESHOLD_KM=5.0
TIMESTAMP_MISMATCH_HOURS=2 